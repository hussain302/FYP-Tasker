<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> @ViewData["Title"] | Find Your Tasker</title>
    <environment include="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    @RenderSection("styles", false)
</head>

<body>
    <header>
        <nav class="navbar navbar-light bg-light container-fluid">
            <div class="container-fluid">
                <a class="navbar-brand text-dark font-weight-bold" asp-action="Index" asp-controller="Home"> Find A Tasker - @ViewData["Title"] </a>
            
                <div class="d-flex m-3">
                    <ul class="navbar-nav">
                        <div class="d-flex">
                            <a class="nav-link text-dark active font-bold" style="margin-right:20px;" asp-action="Contact" asp-controller="Home"> Contact </a>
                            <a class="nav-link text-dark active" style="margin-right:20px;" asp-action="About" asp-controller="Home"> About </a>
                            <a class="nav-link text-success btnactive" style="margin-right:20px;" asp-action="GetAll" asp-controller="TaskPost"> Earn <i class="fa fa-dollar"></i> </a>
                            <a class="nav-link text-warning active" style="margin-right:0px;" href="~/TaskPost/PostTask"> Post <i class="fa fa-plus"></i> </a>
                        </div>
                    </ul>
                </div>
                
                <div class="d-flex m-3 " >                     
                    @if (@ViewBag.Name != null)
                    {
                        <a class="nav-link text-info active text-uppercase  m-1" aria-current="page" asp-controller="User" asp-action="account-info"> @ViewBag.Name </a> <p class="text-white mt-1"> | </p>
                        <a class="nav-link text-danger text-uppercase active m-1" aria-current="page" href="/Logout">Logout</a>
                    }
                    else{
                        <a class="nav-link text-dark active m-1" aria-current="page" asp-action="login" asp-controller="User">Login</a> <p class="text-dark mt-1"> | </p>
                        <a class="nav-link text-dark active m-1" aria-current="page" asp-action="register" asp-controller="User">Register</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="">
        @RenderBody()
    </div>

    <!-- Remove the container if you want to extend the Footer to full width. -->
    <div class="container my-5">

        <footer class="bg-success text-center text-lg-start text-white">
            <!-- Grid container -->
            <div class="container p-4">
                <!--Grid row-->
                <div class="row my-4">
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">

                        <div class="rounded-circle bg-white shadow-1-strong d-flex align-items-center justify-content-center mb-4 mx-auto" style="width: 150px; height: 150px;">
                            <img src="~/images/post_task_icon.png" height="70" alt=""
                                 loading="lazy" />
                        </div>

                        <p class="text-center">Find a Tasker for your job and make it done with ease. </p>


                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                        <h5 class="text-uppercase mb-4">NEED HELP?</h5>

                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>Need a Tasker </a>
                            </li>
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>Post a Task</a>
                            </li>
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>New Users FAQ</a>
                            </li>
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>Post a Query</a>
                            </li>
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>Hire a Tasker From Us</a>
                            </li>                           
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>Privacy Policy</a>
                            </li>
                        </ul>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                        <h5 class="text-uppercase mb-4">Pages</h5>

                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>General information</a>
                            </li>
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>About Find a Tasker</a>
                            </li>                            
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>Contact us</a>
                            </li>
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>Careers - Jobs</a>
                            </li>
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>Login Account</a>
                            </li>
                            <li class="mb-2">
                                <a href="#!" class="text-white"><i class="fas fa-arrow-right pe-3"></i>Create Account</a>
                            </li>
                        </ul>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                        <h5 class="text-uppercase mb-4">Contact</h5>

                        <ul class="list-unstyled">
                            <li>
                                <p><i class="fas fa-map-marker-alt pe-2"></i>Lahore, 57 Street, Pakistan</p>
                            </li>
                            <li>
                                <p><i class="fas fa-phone pe-2"></i>+ 92 234 567 8954</p>
                            </li>
                            <li>
                                <p><i class="fas fa-envelope pe-2 mb-0"></i>contact@tasker.com</p>
                            </li>
                        </ul>
                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
                © @DateTime.Now.ToString("yyyy") Copyright:
                <span class="text-white">Find A Tasker <i class="fa fa-search"></i></span> - <a class="text-white " href="/privacy" > Privacy Policy </a>
            </div>
            <!-- Copyright -->
        </footer>

    </div>
    <!-- End of .container -->

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery"
            crossorigin="anonymous"
            integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.esm.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
