<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> @ViewData["Title"] | Admin</title>
    <environment include="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <style>
        .glow:hover {
            background-color: orange;
            text-decoration: none;
            padding: 5px 8px;
            font-family: sans-serif;
            border-radius: 10px;
            display: inline-block;
        }
    </style>
</head>

<body>

    <header>

        <nav class="navbar navbar-dark bg-dark container-fluid">
            <div class="container-fluid">
                <a class="navbar-brand text-white display-1" href="~/Admin/admin-dashboard"> Admin Portal - @ViewData["Title"] </a>

                <div class="d-flex">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="~/Home/Index" > <i class="fa fa-home"></i> Homepage  </a>
                        </li>
                    </ul>
                </div>

                <button class="navbar-toggler text-white" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                    <small> MENU </small><span class="navbar-toggler-icon text-white"></span>
                </button>

                <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">  Admin Portal  </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"> </button>
                    </div>

                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-start flex-grow-1 pe-3">
                            <li class="nav-item glow">
                                <a class="nav-link active " aria-current="page" href="~/Admin/admin-dashboard"><i class=" fa-solid fa-home"></i> Dashboard </a>
                            </li>
                            <li class="nav-item glow">
                                <a class="nav-link active" aria-current="page" href="~/Admin/manage-users"><i class="fa-solid fa-arrow-right"></i> User's Management </a>
                            </li>
                            <li class="nav-item glow">
                                <a class="nav-link active" aria-current="page" asp-action="Manage" asp-controller="Role"><i class="fa-solid fa-arrow-right"></i> Roles Management </a>
                            </li>
                            <li class="nav-item glow">
                                <a class="nav-link active" aria-current="page" asp-action="manage-account-info" asp-controller="Admin"><i class="fa-solid fa-arrow-right"></i> Account Info</a>
                            </li>
                            <li class="nav-item glow">
                                <a class="nav-link active" aria-current="page" asp-action="manage" asp-controller="Query"><i class="fa-solid fa-arrow-right"></i> Manage Queries </a></a>
                            </li>
                            <li class="nav-item glow">
                                <a class="nav-link active" aria-current="page" asp-action="manage" asp-controller="AdminPost"><i class="fa-solid fa-arrow-right"></i> Post Management </a>
                            </li>

                            <li class="nav-item glow">
                                <a class="nav-link active" aria-current="page" asp-action="Manage" asp-controller="Employee"><i class="fa-solid fa-arrow-right"></i> Employee Management </a>
                            </li>
                            <li class="nav-item glow">
                                <a class="nav-link active" aria-current="page" asp-action="Manage" asp-controller="Category" ><i class="fa-solid fa-arrow-right"></i> Category Management </a>
                            </li>
                            <li class="nav-item glow">
                                <a class="nav-link active" aria-current="page" asp-action="Manage" asp-controller="SubCategory" ><i class="fa-solid fa-arrow-right"></i> Sub Category Management </a>
                            </li>

                            <li class="nav-item glow">
                                <a class="nav-link active" aria-current="page" asp-action="Manage" asp-controller="TaskStatus"><i class="fa-solid fa-arrow-right"></i> Manage Task Status</a>
                            </li>
                        </ul>
                    </div>
                    <a href="/admin-logout" class="btn-sm offset-1 col-9 btn btn-danger mb-3"> Hey @ViewBag.Name! <i class="fa fa-sign-out"></i> </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        @RenderBody()
    </div>


    <footer class="container-fluid text-center">
        <div class="container text-center bg-dark p-1 mt-5">
            <p class="text-white">@DateTime.Now.Year  &copy; All Rights Reserved | Designed and Developed by CodeHub.NET</p>
        </div>
    </footer>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery"
            crossorigin="anonymous"
            integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.esm.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
